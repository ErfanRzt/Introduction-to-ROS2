<?xml version="1.0"?>

<robot name="sam_bot">

  <!-- Base link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.42 0.31 0.18"/>
      </geometry>
      <material name="Cyan">
        <color rgba="0 1.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Robot Footprint -->
  <link name="base_footprint"/>

  <joint name="base_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_footprint"/>
    <!-- -(wheel_radius + wheel_zoff) = -(0.10 + 0.05) = -0.15 -->
    <origin xyz="0.0 0.0 -0.15" rpy="0 0 0"/>
  </joint>

  <!-- Left Wheel -->
  <link name="drivewhl_l_link">
    <visual>
      <!-- rpy="${pi/2} 0 0" = 1.5708 0 0 -->
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.10" length="0.04"/>
      </geometry>
      <material name="Gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="drivewhl_l_joint" type="continuous">
    <parent link="base_link"/>
    <child link="drivewhl_l_link"/>
    <!-- xyz = (x_reflect * wheel_xoff, y_reflect * (base_width/2 + wheel_ygap), -wheel_zoff)
         = (-1 * 0.12, 1 * (0.31/2 + 0.025), -0.05)
         = (-0.12, 0.180, -0.05)
    -->
    <origin xyz="-0.12 0.180 -0.05" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Right Wheel -->
  <link name="drivewhl_r_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.10" length="0.04"/>
      </geometry>
      <material name="Gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="drivewhl_r_joint" type="continuous">
    <parent link="base_link"/>
    <child link="drivewhl_r_link"/>
    <!-- xyz = (-1 * 0.12, -1 * (0.31/2 + 0.025), -0.05)
         = (-0.12, -0.180, -0.05)
    -->
    <origin xyz="-0.12 -0.180 -0.05" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Front Caster -->
  <link name="front_caster">
    <visual>
      <!-- radius = wheel_radius + wheel_zoff - base_height/2
           = 0.10 + 0.05 - 0.18/2 = 0.06 -->
      <geometry>
        <sphere radius="0.06"/>
      </geometry>
      <material name="Cyan">
        <color rgba="0 1.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="caster_joint" type="fixed">
    <parent link="base_link"/>
    <child link="front_caster"/>
    <!-- xyz="${caster_xoff} 0.0 ${-(base_height/2)}" = 0.14 0.0 -0.09 -->
    <origin xyz="0.14 0.0 -0.09" rpy="0 0 0"/>
  </joint>

</robot>
